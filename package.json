  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write src/",
    "clean": "rimraf dist src-tauri/target",
    "tauri": "tauri",

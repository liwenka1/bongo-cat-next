{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BongoCat Next",
  "version": "0.1.0",
  "identifier": "com.bongocatnext.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "BongoCat Next",
        "url": "/",
        "width": 300,
        "height": 300,
        "shadow": false,
        "alwaysOnTop": true,
        "transparent": true,
        "decorations": false,
        "acceptFirstMouse": true,
        "skipTaskbar": true,
        "resizable": true
      },
      {
        "label": "settings",
        "title": "BongoCat Settings",
        "url": "/settings",
        "visible": false,
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**/*"],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Game",
    "shortDescription": "BongoCat Next - Desktop Pet",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
